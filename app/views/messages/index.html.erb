<div class="pb-2 mt-4 mb-2 border-bottom">
  <div class="row">
    <div class="col-sm-6">
      <h3>Mensajes</h3>
    </div>
    <div class="col-sm-6">
      <div align="right">
        <%= link_to 'Crear message', new_message_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
<br />
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Fecha</th>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Email</th>
        <th>Asunto</th>
        <th>Texto del mensaje</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @messages.each do |message| %>
      <tr>
        <td><%= message.created_at.strftime("%d/%m/%Y - %H:%M") %></td>
        <td><%= message.name %></td>
        <td><%= message.surname %></td>
        <td><%= message.email %></td>
        <td><%= message.title %></td>
        <td><%= message.text %></td>
        <td><%= link_to 'Borrar', message, method: :delete, data: { confirm: 'Confirma el borrado del mensaje?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
