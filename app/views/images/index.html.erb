<div class="pb-2 mt-4 mb-2 border-bottom">
  <div class="row">
    <div class="col-sm-6">
      <h3>Imagenes</h3>
    </div>
    <div class="col-sm-6">
      <div align="right">
        <%= link_to 'Subir imagen', new_image_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
<br />
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @images.each do |image| %>
      <tr>
        <td><div align="center"><%= File.basename(image.picture.url) %></td>
        <td><div align="center"><%= image_tag(image.picture.thumb.url, alt: 'Picture') %></td>
        <td><%= link_to 'Detalle', image %></td>
        <td><%= link_to 'Borrar', image, method: :delete, data: { confirm: 'Confirma la eliminacion de la imagen?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
