<div class="pb-2 mt-4 mb-2 border-bottom">
  <div class="row">
    <div class="col-sm-6">
        <h3><%= @document.title %></h3>
    </div>
    <div class="col-sm-6">
      <div align="right">
        <%= link_to 'Editar titulo', edit_document_path %>
        <%= link_to ' | Vista Previa',document_preview_index_url(:id => @document) %>
        <%= link_to ' | Atras',documents_path %>
      </div>
    </div>
  </div>
</div>
<br />

<div align="right">
  <%= link_to 'Agregar parrafo', new_paragraph_path(:document_id => @document.id), class: 'btn btn-primary' %>
</div>

<br>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Titulo</th>
        <th>Texto</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @document.paragraphs.each do |paragraph| %>
      <tr>
        <td><%= paragraph.title %></td>
        <td><%= paragraph.text %></td>
        <td><div align="center"><%= link_to image_tag('examine-icon.png', :size => "20x20"), paragraph %></td>
        <td><div align="center"><%= link_to image_tag('delete-icon.png', :size => "20x20"), paragraph, method: :delete, data: { confirm: 'Confirma el borrado del parrafo?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
