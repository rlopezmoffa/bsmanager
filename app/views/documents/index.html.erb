<div class="pb-2 mt-4 mb-2 border-bottom">
  <div class="row">
    <div class="col-sm-6">
      <h3>Documentos</h3>
    </div>
    <div class="col-sm-6">
      <div align="right">
        <%= link_to 'Crear nuevo Documento', new_document_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
<br />
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Titulo</th>
        <th>Texto</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @documents.each do |document| %>
      <tr>
        <td><%= document.title %></td>
        <td><%= document.text %></td>
        <td><%= link_to 'Ver', document %></td>
        <td><%= link_to 'Editar', edit_document_path(document) %></td>
        <td><%= link_to 'Borrar', document, method: :delete, data: { confirm: 'Confirma el borrado del documento?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
