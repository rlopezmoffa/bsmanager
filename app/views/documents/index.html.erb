<div class="pb-2 mt-4 mb-2 border-bottom">
  <div class="row">
    <div class="col-sm-6">
      <h4>Documentos</h4>
    </div>
    <div class="col-sm-6">
      <div align="right">
        <%= link_to 'Crear nuevo Documento', new_document_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
<br />
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Titulo</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @documents.each do |document| %>
      <tr>
        <td><%= document.title %></td>
        <td><div align="center"><%= link_to image_tag('examine-icon.png', :size => "20x20"), document %></td>
        <td><div align="center"><%= link_to image_tag('delete-icon.png', :size => "20x20"), document, method: :delete, data: { confirm: 'Confirma el borrado del documento?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
